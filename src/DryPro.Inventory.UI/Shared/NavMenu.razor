<MudDrawer @bind-Open="SideBarOpen" Elevation="1">
    <MudDrawerHeader>
        <MudText Typo="Typo.h6">DryPro Inventory</MudText>
    </MudDrawerHeader>
    <MudNavMenu>
        <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Filled.Home">Home</MudNavLink>
        <MudNavLink Href="/products" Match="NavLinkMatch.All" Icon="@Icons.Filled.SpaceDashboard">Products</MudNavLink>
        <MudNavLink Href="/parts" Match="NavLinkMatch.All" Icon="@Icons.Filled.DashboardCustomize">Parts</MudNavLink>
        <MudNavGroup Title="Inventory" Icon="@Icons.Filled.Storage" Expanded="false">
            <MudNavLink Href="#" Icon="@Icons.Filled.BorderAll">Stocks</MudNavLink>
            <MudNavLink Href="#" Icon="@Icons.Filled.ShoppingBag">Orders</MudNavLink>
        </MudNavGroup>
    </MudNavMenu>
</MudDrawer>

@code {
    [Parameter] public bool SideBarOpen { get; set; }
}