@page "/inventory/build"

<MudCard Elevation="25">
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">Build</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudForm>
            <MudTextField T="string" Label="Name" Immediate="true" @bind-Value="Inventory.Name"
                For="() => Inventory.Name" />
            <MudTextField T="string" Label="Description" Immediate="true" @bind-Value="Inventory.Description"
                For="() => Inventory.Description" />
            <MudNumericField T="int" Label="Stock Items" Immediate="true" @bind-Value="Inventory.StockItems"
                For="() => Inventory.StockItems" />
            <MudTextField T="decimal" Label="Cost" Immediate="true" @bind-Value="Inventory.Cost"
                For="() => Inventory.Cost" />
        </MudForm>
        <br />
        <MudButton Variant="Variant.Filled" Color="Color.Success" OnClick="BuildItem">Build</MudButton>
    </MudCardContent>
</MudCard>

@code {
    [Parameter] public Inventory Inventory { get; set; } = new();

    private void BuildItem()
    {

    }
}