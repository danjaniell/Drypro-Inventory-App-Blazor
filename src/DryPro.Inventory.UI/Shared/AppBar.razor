<MudAppBar Elevation="3">
    @if (_isMenuCollapsed)
    {
        <MudIconButton Icon="@Icons.Material.Filled.ArrowForwardIos" Color="Color.Inherit" Edge="Edge.Start"
        OnClick="ToggleSideBar" />
    }
    else
    {
        <MudIconButton Icon="@Icons.Material.Filled.ArrowBackIos" Color="Color.Inherit" Edge="Edge.Start"
        OnClick="ToggleSideBar" />
    }
    <MudSpacer />
    @if (_isLightMode)
    {
        <MudIconButton Icon="@Icons.Material.Filled.Brightness4" Color="Color.Inherit" OnClick="ToggleTheme" />
    }
    else
    {
        <MudIconButton Icon="@Icons.Material.Filled.Brightness5" Color="Color.Inherit" OnClick="ToggleTheme" />
    }
</MudAppBar>