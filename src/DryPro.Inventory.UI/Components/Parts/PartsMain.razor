<MudContainer Class="d-flex justify-left mb-2">
    <AddPartsButton OnAddParts="ActionCallback" />
    <UpdatePartsButton Parts="SelectedPart" OnUpdateParts="ActionCallback" />
    <DeletePartsButton Parts="SelectedPart" OnDeleteParts="ActionCallback" />
</MudContainer>
<PartsTable Table="table" />

@code {
    private MudTable<Parts> table;
    private Parts SelectedPart { get; set; }

    private async Task ActionCallback()
    {
        await table.ReloadServerData();
    }
}